{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["node"]
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production"
      }
    }
  },
  "crons": [
    {
      "command": "node run-all.cjs",
      "schedule": "0 */2 * * *",
      "timezone": "Europe/Paris"
    }
  ],
  "start": "node start-railway.js"
}
